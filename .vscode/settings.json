{
    "typescript.tsdk": "./node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "editor.formatOnSave": false,
    "editor.renderWhitespace": "all",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/_archive/**": true,
        "**/node_modules/**": true,
        "**/dist/**": true,
        "**/cjs/**": true,
        "**/esm/**": true,
        "**/build/**": true,
        "**/mock/**": true,
        "**/coverage/**": true,
        "**/release/**": true,
        "**/public/**": true,
        "**/cache/**": true,
        "**/tmp/**": true,
        "**/bucket/**": true,
    },
    "files.exclude": {
        "**/.git": true,
        "**/node_modules/**": true,
        "**/dist/**": true,
        "**/cjs/**": true,
        "**/esm/**": true,
    },
    "search.exclude": {
      "**/_archive/**": true,
        "**/build/**": true,
        "**/cache/**": true,
        "**/tmp/**": true,
        "**/bucket/**": true,
    },
    "git.rebaseWhenSync": true,
}
